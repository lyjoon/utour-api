<?xml version="1.0" encoding="UTF-8"?>
<config
        xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
        xmlns='http://www.ehcache.org/v3'
        xmlns:jsr107="http://www.ehcache.org/v3/jsr107"
        xsi:schemaLocation="http://www.ehcache.org/v3
        http://www.ehcache.org/schema/ehcache-core.xsd
        http://www.ehcache.org/v3/jsr107
        http://www.ehcache.org/schema/ehcache-107-ext-3.0.xsd">
    <service>
        <jsr107:defaults enable-management="true" enable-statistics="false"/>
    </service>

    <cache alias="code">
        <key-type>java.lang.String</key-type>
        <value-type>com.utour.dto.code.CodeDto</value-type>
        <expiry>
            <ttl>600</ttl>
        </expiry>
        <resources>
            <heap>5000</heap>
        </resources>
    </cache>

    <cache alias="nationList">
        <value-type>java.util.ArrayList</value-type>
        <expiry>
            <ttl>600</ttl>
        </expiry>
        <resources>
            <heap unit="entries">255</heap>
        </resources>
    </cache>

    <cache alias="nation">
        <key-type>java.util.ArrayList</key-type>
        <value-type>com.utour.dto.code.NationDto</value-type>
        <expiry>
            <ttl>600</ttl>
        </expiry>
        <resources>
            <heap unit="entries">500</heap>
        </resources>
    </cache>

</config>