<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.utour.mapper.ViewComponentImageMapper">

    <resultMap id="resultMap" type="com.utour.entity.ViewComponentImage" extends="common.component.resultMap">
        <result javaType="java.lang.String" property="displayType" column="DISPLAY_TYPE" />
    </resultMap>

    <sql id="select">
        SELECT
          DISPLAY_TYPE
          <include refid="common.component.column" />
        FROM VIEW_COMPONENT_IMAGE T
    </sql>

    <sql id="where">
        WHERE VIEW_COMPONENT_ID = #{viewComponentId}
    </sql>

    <select id="exists" resultType="java.lang.Boolean">
        /* com.utour.mapper.ViewComponentImageMapper.exists */
        <include refid="common.base.existsPrefix" />
        <include refid="select" />
        <include refid="where" />
        <include refid="common.base.existsSuffix" />
    </select>

    <select id="findById" resultMap="resultMap">
        /* com.utour.mapper.ViewComponentImageMapper.findById */
        <include refid="select" />
        <include refid="where" />
    </select>

    <select id="findAll" resultMap="resultMap">
        /* com.utour.mapper.ViewComponentImageMapper.findAll */
        <include refid="select" />
        <include refid="where" />
    </select>

    <insert id="save">
        /* com.utour.mapper.ViewComponentImageMapper.save */
        INSERT INTO VIEW_COMPONENT_IMAGE (
          DISPLAY_TYPE
          <include refid="common.component.column" />
        ) VALUES (
          #{displayType}
          <include refid="common.component.value" />
        )
        <include refid="common.component.duplicateUpdate" />
        , DISPLAY_TYPE = VALUES(DISPLAY_TYPE)
    </insert>

    <delete id="delete">
        /* com.utour.mapper.ViewComponentImageMapper.delete */
        DELETE FROM VIEW_COMPONENT_IMAGE
        <include refid="where" />
    </delete>

</mapper>