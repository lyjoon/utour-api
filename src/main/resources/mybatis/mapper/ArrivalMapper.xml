<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.utour.mapper.ArrivalMapper">

    <resultMap id="resultMap" type="com.utour.entity.Arrival" extends="common.base.resultMap">
        <result javaType="java.lang.String" property="arrivalCode" column="ARRIVAL_CODE" />
        <result javaType="java.lang.String" property="arrivalName" column="ARRIVAL_NAME" />
        <result javaType="java.lang.Character" property="menuYn" column="MENU_YN" />
        <result javaType="java.lang.Integer" property="ordinalPosition" column="ORDINAL_POSITION" />
        <result javaType="java.lang.Character" property="useYn" column="USE_YN" />
    </resultMap>

    <sql id="select">
        SELECT
          ARRIVAL_CODE
        , ARRIVAL_NAME
        , MENU_YN
        , ORDINAL_POSITION
        , USE_YN
        <include refid="common.base.column" />
        FROM ARRIVAL T
    </sql>

    <sql id="where">
        <where>
            <if test="arrivalCode != null and arrivalCode != ''">AND arrivalCode = #{arrivalCode}</if>
            <if test="menuYn != null">AND MENU_YN = #{menuYn}</if>
            <if test="useYn != null">AND USE_YN = #{useYn}</if>
        </where>
    </sql>

    <select id="exists" resultType="java.lang.Boolean">
        <include refid="common.base.existsPrefix" />
        <include refid="select" />
        <include refid="where" />
        <include refid="common.base.existsSuffix" />
    </select>

    <select id="findById" resultMap="resultMap">
        <include refid="select" />
        WHERE ARRIVAL_CODE = #{arrivalCode}
    </select>

    <select id="findAll" resultMap="resultMap">
        <include refid="select" />
        <include refid="where" />
        ORDER BY ORDINAL_POSITION
    </select>

    <insert id="save">
        INSERT INTO ARRIVAL (
          ARRIVAL_CODE
        , ARRIVAL_NAME
        , MENU_YN
        , ORDINAL_POSITION
        , USE_YN
        ) VALUES (
          #{arrivalCode}
        , #{arrivalName}
        , #{menuYn}
        , #{ordinalPosition}
        , #{useYn}
        )
        <include refid="common.base.duplicateUpdate" />
        <if test="useYn != null">, USE_YN = VALUES(USE_YN)</if>
        <if test="ordinalPosition != null">, ORDINAL_POSITION = VALUES(ORDINAL_POSITION)</if>
        <if test="menuYn != null">, MENU_YN = VALUES(MENU_YN)</if>
        <if test="arrivalName != null and arrivalName != ''">, ARRIVAL_NAME = VALUES(ARRIVAL_NAME)</if>
    </insert>

    <delete id="delete">
        DELETE FROM ARRIVAL
        WHERE ARRIVAL_CODE = #{arrivalCode}
    </delete>

</mapper>