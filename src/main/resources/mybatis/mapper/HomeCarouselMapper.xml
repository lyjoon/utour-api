<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.utour.mapper.HomeCarouselMapper">

    <resultMap id="resultMap" type="com.utour.entity.HomeCarousel" extends="common.base.resultMap">
        <result javaType="java.lang.Long" property="homeCarouselId" column="HOME_CAROUSEL_ID" />
        <result javaType="java.lang.String" property="title" column="TITLE" />
        <result javaType="java.lang.String" property="imageSrc" column="IMAGE_SRC" />
        <result javaType="java.lang.String" property="linkUrl" column="LINK_URL" />
        <result javaType="java.lang.Integer" property="ordinalPosition" column="ORDINAL_POSITION" />
        <result javaType="java.lang.Character" property="useYn" column="USE_YN" />
    </resultMap>

    <select id="exists" resultType="java.lang.Boolean">
        <include refid="common.base.existsPrefix" />
        SELECT * FROM HOME_CAROUSEL
        <where>
            <if test="homeCarouselId != null">AND HOME_CAROUSEL_ID = #{homeCarouselId}</if>
            <if test="useYn != null">AND USE_YN = #{useYn}</if>
        </where>
        <include refid="common.base.existsSuffix" />
    </select>

    <select id="findById" resultMap="resultMap">
        SELECT
          HOME_CAROUSEL_ID
        , TITLE
        , IMAGE_SRC
        , LINK_URL
        , ORDINAL_POSITION
        , USE_YN
        <include refid="common.base.column" />
        FROM HOME_CAROUSEL
        WHERE HOME_CAROUSEL_ID = #{homeCarouselId}
    </select>

    <select id="findAll" resultMap="resultMap">
        SELECT
          HOME_CAROUSEL_ID
        , TITLE
        , IMAGE_SRC
        , LINK_URL
        , ORDINAL_POSITION
        , USE_YN
        <include refid="common.base.column" />
        FROM HOME_CAROUSEL
        <where>
            <if test="homeCarouselId != null">AND HOME_CAROUSEL_ID = #{homeCarouselId}</if>
            <if test="useYn != null">AND USE_YN = #{useYn}</if>
        </where>
        ORDER BY ORDINAL_POSITION, HOME_CAROUSEL_ID DESC
    </select>

    <insert id="save">
        INSERT INTO HOME_CAROUSEL(
          HOME_CAROUSEL_ID
        , TITLE
        , IMAGE_SRC
        , LINK_URL
        , ORDINAL_POSITION
        , USE_YN
        ) VALUES (
          #{homeCarouselId}
        , #{title}
        , #{imageSrc}
        , #{linkUrl}
        , #{ordinalPosition}
        , #{useYn}
        )
        <include refid="common.base.duplicateUpdate" />
        <if test="title != null">, TITLE = VALUES(TITLE)</if>
        <if test="imageSrc != null">, IMAGE_SRC = VALUES(IMAGE_SRC)</if>
        <if test="linkUrl != null">, LINK_URL = VALUES(LINK_URL)</if>
        <if test="ordinalPosition != null">, ORDINAL_POSITION = VALUES(ORDINAL_POSITION)</if>
        <if test="useYn != null">, USE_YN = VALUES(USE_YN)</if>
    </insert>

    <delete id="delete">
        DELETE FROM HOME_CAROUSEL
        WHERE HOME_CAROUSEL_ID = #{homeCarouselId}
    </delete>

</mapper>