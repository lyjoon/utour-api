<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="common.resultMap">

    <resultMap id="base" type="com.utour.common.CommonEntity">
        <result javaType="java.time.LocalDateTime" property="createAt" column="CREATE_AT" />
        <result javaType="java.time.LocalDateTime" property="updateAt" column="UPDATE_AT" />
    </resultMap>

    <resultMap id="content" type="com.utour.entity.common.Content" extends="common.resultMap.base">
        <result javaType="java.lang.String" property="title" column="TITLE" />
        <result javaType="java.lang.String" property="content" column="CONTENT" />
        <result javaType="java.lang.String" property="writer" column="WRITER" />
        <result javaType="int" property="pv" column="PV" />
    </resultMap>

    <resultMap id="attachment" type="com.utour.entity.common.Attachment" extends="common.resultMap.base">
        <result javaType="java.lang.String" property="path" column="PATH" />
        <result javaType="java.lang.String" property="originName" column="ORIGIN_NAME" />
        <result javaType="java.lang.Long" property="size" column="SIZE" />
    </resultMap>

</mapper>