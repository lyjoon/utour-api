<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.utour.mapper.DealMapper">

    <resultMap id="resultMap" type="com.utour.entity.Deal" extends="common.base.resultMap">
        <result javaType="java.lang.Long" property="dealId" column="DEAL_ID" />
        <result javaType="java.lang.String" property="hotelId" column="HOTEL_ID" />
        <result javaType="java.lang.String" property="displayType" column="DISPLAY_TYPE" />
        <result javaType="java.lang.String" property="title" column="TITLE" />
        <result javaType="java.lang.String" property="description" column="DESCRIPTION" />
        <result javaType="java.lang.Integer" property="ordinal" column="ORDINAL" />
        <result javaType="java.lang.String" property="src" column="SRC" />
        <result javaType="java.lang.Character" property="useYn" column="USE_YN" />
    </resultMap>

    <sql id="select">
        SELECT
          DEAL_ID
        , HOTEL_ID
        , DISPLAY_TYPE
        , TITLE
        , DESCRIPTION
        , ORDINAL
        , SRC
        , USE_YN
        <include refid="common.base.column" />
        FROM DEAL T
    </sql>

    <sql id="where">
        <where>
            <if test="dealId != null">AND DEAL_ID = #{dealId}</if>
            <if test="useYn != null">AND USE_YN = #{useYn}</if>
            <if test="displayType != null">AND DISPLAY_TYPE = #{displayType}</if>
            <if test="title != null">AND TITLE LIKE CONCAT(#{title}, '%')</if>
        </where>
    </sql>

    <select id="exists" resultType="java.lang.Boolean">
        <include refid="common.base.existsPrefix" />
        <include refid="select" />
        <include refid="where" />
        <include refid="common.base.existsSuffix" />
    </select>

    <select id="findById" resultMap="resultMap">
        <include refid="select" />
        WHERE DEAL_ID = #{dealId}
    </select>

    <select id="findAll" resultMap="resultMap">
        <include refid="select" />
        <include refid="where" />
        ORDER BY T.ORDINAL DESC
        <include refid="common.base.pagination" />
    </select>

    <insert id="save">
        INSERT INTO DEAL (
          DEAL_ID
        , HOTEL_ID
        , DISPLAY_TYPE
        , TITLE
        , DESCRIPTION
        , ORDINAL
        , SRC
        , USE_YN
        ) VALUES (
          #{dealId }
        , #{hotelId }
        , #{displayType }
        , #{title }
        , #{description }
        , #{ordinal }
        , #{src }
        , #{useYn }
        )
        <include refid="common.base.duplicateUpdate" />
        , HOTEL_ID = VALUES(HOTEL_ID)
        , TITLE = VALUES(TITLE)
        , DESCRIPTION = VALUES(DESCRIPTION)
        , ORDINAL = VALUES(ORDINAL)
        , SRC = VALUES(SRC)
        , USE_YN = VALUES(USE_YN)
    </insert>

    <delete id="delete">
        DELETE FROM DEAL
        WHERE DEAL_ID = #{dealId}
    </delete>

</mapper>