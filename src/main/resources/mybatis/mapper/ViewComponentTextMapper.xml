<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.utour.mapper.ViewComponentTextMapper">

    <resultMap id="resultMap" type="com.utour.entity.ViewComponentText" extends="common.component.resultMap">
        <result javaType="java.lang.String" property="content" column="CONTENT" />
    </resultMap>

    <sql id="select">
        SELECT
          CONTENT
        <include refid="common.component.column" />
        FROM VIEW_COMPONENT_TEXT T
    </sql>

    <sql id="where">
        WHERE VIEW_COMPONENT_ID = #{viewComponentId}
    </sql>

    <select id="exists" resultType="java.lang.Boolean">
        /* com.utour.mapper.ViewComponentTextMapper.exists */
        <include refid="common.base.existsPrefix" />
        <include refid="select" />
        <include refid="where" />
        <include refid="common.base.existsSuffix" />
    </select>

    <select id="findById" resultMap="resultMap">
        /* com.utour.mapper.ViewComponentTextMapper.findById */
        <include refid="select" />
        <include refid="where" />
    </select>

    <select id="findAll" resultMap="resultMap">
        /* com.utour.mapper.ViewComponentTextMapper.findAll */
        <include refid="select" />
        <include refid="where" />
    </select>

    <insert id="save">
        /* com.utour.mapper.ViewComponentTextMapper.save */
        INSERT INTO VIEW_COMPONENT_TEXT (
          CONTENT
          <include refid="common.component.column" />
        ) VALUES (
          #{content}
          <include refid="common.component.value" />
        )
        <include refid="common.component.duplicateUpdate" />
        , CONTENT = VALUES(CONTENT)
    </insert>

    <delete id="delete">
        /* com.utour.mapper.ViewComponentTextMapper.delete */
        DELETE FROM VIEW_COMPONENT_TEXT WHERE VIEW_COMPONENT_ID = #{viewComponentId}
    </delete>

</mapper>