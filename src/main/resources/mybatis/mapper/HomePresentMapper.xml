<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.utour.mapper.HomePresentMapper">

    <resultMap id="resultMap" type="com.utour.entity.HomePresent" extends="common.base.resultMap">
        <result javaType="java.lang.Long" property="homePresentId" column="HOME_PRESENT_ID" />
        <result javaType="java.lang.Long" property="productId" column="PRODUCT_ID" />
        <result javaType="java.lang.Integer" property="ordinalPosition" column="ORDINAL_POSITION" />
        <result javaType="java.lang.Character" property="useYn" column="USE_YN" />
    </resultMap>

    <select id="exists" resultType="java.lang.Boolean">
        <include refid="common.base.existsPrefix" />
        SELECT * FROM HOME_PRESENT
        <where>
            <if test="homePresentId != null">AND HOME_PRESENT_ID = #{homePresentId}</if>
            <if test="productId != null">AND PRODUCT_ID = #{productId}</if>
            <if test="useYn != null">AND USE_YN = #{useYn}</if>
        </where>
        <include refid="common.base.existsSuffix" />
    </select>

    <select id="findById" resultMap="resultMap">
        SELECT
        HOME_PRESENT_ID
        , PRODUCT_ID
        , ORDINAL_POSITION
        , USE_YN
        <include refid="common.base.column" />
        FROM HOME_PRESENT
        WHERE HOME_PRESENT_ID = #{homePresentId}
    </select>

    <select id="findAll" resultMap="resultMap">
        SELECT
        HOME_PRESENT_ID
        , PRODUCT_ID
        , ORDINAL_POSITION
        , USE_YN
        <include refid="common.base.column" />
        FROM HOME_PRESENT
        <where>
            <if test="homePresentId != null">AND HOME_PRESENT_ID = #{homePresentId}</if>
            <if test="productId != null">AND PRODUCT_ID = #{productId}</if>
            <if test="useYn != null">AND USE_YN = #{useYn}</if>
        </where>
        ORDER BY ORDINAL_POSITION, HOME_PRESENT_ID DESC
    </select>

    <insert id="save">
        INSERT INTO HOME_PRESENT (
        HOME_PRESENT_ID
        , PRODUCT_ID
        , ORDINAL_POSITION
        , USE_YN
        ) VALUES (
        #{homePresentId}
        , #{productId}
        , #{ordinalPosition}
        , #{useYn}
        )
        <include refid="common.base.duplicateUpdate" />
        <if test="productId != null">, PRODUCT_ID = VALUES(PRODUCT_ID)</if>
        <if test="ordinalPosition != null">, ORDINAL_POSITION = VALUES(ORDINAL_POSITION)</if>
        <if test="useYn != null">, USE_YN = VALUES(USE_YN)</if>
    </insert>

    <delete id="delete">
        DELETE FROM HOME_PRESENT
        WHERE HOME_PRESENT_ID = #{homePresentId}
    </delete>

</mapper>