<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.utour.mapper.InquiryAttachmentMapper">

    <resultMap id="resultMap" type="com.utour.entity.InquiryAttachment" extends="common.attachment.resultMap">
        <result javaType="java.lang.Long" property="inquiryId" column="INQUIRY_ID"  />
    </resultMap>

    <sql id="select">
        SELECT
        <include refid="common.attachment.select" />
        ,  INQUIRY_ID
        FROM INQUIRY_ATTACHMENT T
    </sql>

    <sql id="where">
        <where>
            <if test="inquiryId != null">AND INQUIRY_ID = #{inquiryId}</if>
        </where>
    </sql>

    <select id="exists" resultType="java.lang.Boolean">
        <include refid="common.base.existsPrefix" />
        <include refid="select" />
        <include refid="where" />
        <include refid="common.base.existsSuffix" />
    </select>

    <select id="findById" resultMap="resultMap">
        <include refid="select" />
        WHERE INQUIRY_ID = #{inquiryId}
          AND ATTACHMENT_ID = #{attachmentId}
    </select>

    <select id="findAll" resultMap="resultMap">
        <include refid="select" />
        <include refid="where" />
    </select>

    <insert id="save">
        INSERT INTO INQUIRY_ATTACHMENT (
        <include refid="common.attachment.column" />
        , INQUIRY_ID
        ) VALUES (
        <include refid="common.attachment.value" />
        , #{inquiryId}
        )
        <include refid="common.attachment.duplicateUpdate" />
    </insert>

    <delete id="delete">
        DELETE FROM INQUIRY_ATTACHMENT
        WHERE INQUIRY_ID = #{inquiryId}
          AND ATTACHMENT_ID = #{attachmentId}
    </delete>

</mapper>