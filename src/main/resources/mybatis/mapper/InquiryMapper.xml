<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.utour.mapper.InquiryMapper">

    <resultMap id="resultMap" type="com.utour.entity.Inquiry" extends="common.base.resultMap">
        <result javaType="java.lang.Long" property="inquiryId" column="INQUIRY_ID" />
        <result javaType="java.lang.String" property="writer" column="WRITER" />
        <result javaType="java.lang.String" property="content" column="CONTENT" />
        <result javaType="java.lang.String" property="contact" column="CONTACT" />
        <result javaType="java.lang.String" property="email" column="EMAIL" />
        <result javaType="java.lang.String" property="nationCode" column="NATION_CODE" />
        <result javaType="java.lang.String" property="areaCode" column="AREA_CODE" />
        <result javaType="java.lang.Long" property="hotelId" column="HOTEL_ID" />
    </resultMap>

    <sql id="select">
        SELECT
          INQUIRY_ID
        , WRITER
        , CONTENT
        , CONTACT
        , EMAIL
        , NATION_CODE
        , AREA_CODE
        , HOTEL_ID
        <include refid="common.base.column" />
        FROM INQUIRY T
    </sql>

    <sql id="where">
        <where>
            <if test="inquiryId != null">AND INQUIRY_ID = #{inquiryId}</if>
            <if test="writer != null">AND WRITER LIKE CONCAT(#{writer}, '%')</if>
            <if test="content != null">AND CONTENT LIKE CONCAT(#{content}, '%')</if>
            <if test="nationCode != null">AND NATION_CODE = #{nationCode}</if>
            <if test="areaCode != null">AND AREA_CODE = #{areaCode}</if>
            <if test="hotelId != null">AND HOTEL_ID = #{hotelId}</if>
        </where>
    </sql>

    <select id="exists" resultType="java.lang.Boolean">
        <include refid="common.base.existsPrefix" />
        <include refid="select" />
        <include refid="where" />
        <include refid="common.base.existsSuffix" />
    </select>

    <select id="findById" resultMap="resultMap">
        <include refid="select" />
        WHERE INQUIRY_ID = #{inquiryId}
    </select>

    <select id="findAll" resultMap="resultMap">
        <include refid="select" />
        <include refid="where" />
        <include refid="common.base.pagination" />
    </select>

    <insert id="save">
        INSERT INTO INQUIRY (
          INQUIRY_ID
        , WRITER
        , CONTENT
        , CONTACT
        , EMAIL
        , NATION_CODE
        , AREA_CODE
        , HOTEL_ID
        ) VALUES (
          #{inquiryId}
        , #{writer}
        , #{content}
        , #{contact}
        , #{email}
        , #{nationCode}
        , #{areaCode}
        , #{hotelId}
        )
        <include refid="common.base.duplicateUpdate" />
        , WRITER = VALUES(WRITER)
        , CONTENT = VALUES(CONTENT)
        , CONTACT = VALUES(CONTACT)
        , EMAIL = VALUES(EMAIL)
    </insert>

    <delete id="delete">
        DELETE FROM INQUIRY
        WHERE INQUIRY_ID = #{inquiryId}
    </delete>

</mapper>